{
  "manifest_version": 3,
  "name": "DevMarks",
  "version": "1.0.0",
  "description": "Quick save bookmarks to DevMarks - automatically syncs with web app",
  "permissions": ["activeTab", "tabs", "storage", "scripting"],
  "host_permissions": [
    "http://localhost/*",
    "https://devmarks.sreekarreddy.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "https://devmarks.sreekarreddy.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
