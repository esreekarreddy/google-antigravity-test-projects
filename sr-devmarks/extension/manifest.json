{
  "manifest_version": 3,
  "name": "DevMarks",
  "version": "1.0.0",
  "description": "Quick save bookmarks to DevMarks - automatically syncs with web app",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["*://localhost:3000/*", "*://devmarks.sreekarreddy.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://localhost:3000/*", "*://devmarks.sreekarreddy.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
